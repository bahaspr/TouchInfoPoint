<Window x:Class="TouchInfoPoint.VideoViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoViewer" Height="353.008" Width="864.925" 
        WindowStyle="None" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <MediaElement x:Name="MediaVideo" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" MouseUp="MediaVideo_MouseUp" MediaEnded="MediaVideo_MediaEnded"/>
        <Image x:Name="Btn_Close" HorizontalAlignment="Right" Height="40" Width="40" Margin="0,0,0,0" VerticalAlignment="Top" Source="Image/close.png" MouseUp="Btn_Close_MouseUp" MouseEnter="Btn_Close_MouseEnter" MouseLeave="Btn_Close_MouseLeave"/>
    </Grid>
</Window>
